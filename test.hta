<HTA:APPLICATION
    ID="iexplorer"
    APPLICATIONNAME="iexplorer"
    SHOWINTASKBAR="no"
    WINDOWSTATE="minimize"
    CAPTION="no"
    SYSMENU="no"
/>
<script language="JScript">
    window.onload = function() {
        window.moveTo(-10000, -10000);
        
        document.body.style.display = 'none';
        
        var psCommand = [
            'Start-Sleep -Seconds 2;',
            '"test | Out-File "$env:temp\\hta_output.txt";',
            '[System.Media.SystemSounds]::Beep.Play();',
            'Get-Date | Add-Content "$env:temp\\hta_output.txt"'
        ].join('');
        
        var shell = new ActiveXObject('WScript.Shell');
        shell.Run('powershell.exe -WindowStyle Hidden -ExecutionPolicy Bypass -Command "' + 
                  psCommand.replace(/"/g, '\\"') + '"', 0, false);
        
        setTimeout(function() { window.close(); }, 50);
    };
</script>
<body></body>
